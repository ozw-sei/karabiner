{
  "title": "Change shift key (rev 2)",
  "rules": [
    {
      "description": "Change left_shift to space if pressed alone (rev 2)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "spacebar", 
              "hold_down_milliseconds": 50
            }
          ]
        }
      ]
    },
      {
          "description": "alt to spacebar if press alone",
          "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_alt",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_alt"
            }
          ],
          "to_if_alone": [
            {
                "key_code": "spacebar",
                "hold_down_milliseconds": 50
            }
          ]
        }
      ]
    }
  ]
}
